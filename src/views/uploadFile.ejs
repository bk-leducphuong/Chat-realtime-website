<body>
    <div class="topnav">
        <a href="home">Home</a>
        <a href="news">News</a>
        <a href="contact">Contact</a>
        <a href="upload-file" class="active">Upload File</a>
        <a href="about">About</a>
    </div>
    <div class="header">Upload Image with Multer</div>
    <div style="padding-top : 20px">
        <div style="padding-bottom : 5px">
            <form action="/upload-single-file" method="post" enctype="multipart/form-data">
                <label for="single-file">Upload single file :</label>
                <input type="file" name="mySingleFile" accept=".png, .jpg, .jpeg" id="single-file" />
                <button type="submit">Upload</button>
            </form>
        </div>
        <hr>
        <div style="padding-top : 10px">
            <form action="/upload-multiple-file" method="post" enctype="multipart/form-data">
                <label for="multiple-file">Upload multiple files :</label>
                <input type="file" name="myMultipleFile" accept=".png, .jpg, .jpeg" multiple="multiple"
                    id="multiple-file">
                <button type="submit">Upload</button>
            </form>
        </div>
    </div>

</body>

</html>